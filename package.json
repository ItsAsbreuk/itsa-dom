{
  "name": "itsa-dom",
  "version": "0.0.1",
  "description": "Useful dom-tools for making working with the dom just a bit easier",
  "author": [
    {
      "name": "Marco Asbreuk",
      "email": "marco@itsasbreuk.nl"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ItsAsbreuk/itsa-dom"
  },
  "bugs": {
    "url": "https://github.com/ItsAsbreuk/itsa-dom/issues"
  },
  "keywords": [
    "itsasbreuk",
    "itsa",
    "dom"
  ],
  "main": "index.js",
  "engines": {
    "node": "*"
  },
  "directories": {
    "lib": "./lib"
  },
  "dependencies": {
    "itsa-jsext": "0.0.2",
    "itsa-utils": "0.0.3"
  },
  "devDependencies": {
    "babel-core": "^6.4.0",
    "babel-eslint": "^4.1.6",
    "babel-loader": "^6.2.1",
    "babel-preset-es2015": "^6.3.13",
    "chai": "^3.5.0",
    "chai-as-promised": "^5.2.0",
    "css-loader": "^0.23.1",
    "eslint": "^1.10.3",
    "istanbul": "^0.3.0",
    "itsa-classes": "^1.0.3",
    "jsdom": "^7.2.2",
    "jsdom-global": "^1.6.1",
    "mocha": "^1.21.4",
    "whatwg-fetch": "^0.11.0",
    "yuidocjs": "^0.9.0"
  },
  "scripts": {
    "pretest": "eslint  ./**/*.js",
    "test": "mocha 'tests/*.js' --compilers js:babel-core/register --globals itsa_getScrollLeft,itsa_getScrollTop,itsa_getWidth,itsa_getHeight",
    "lint": "eslint ./**/*.js",
    "build": "webpack && yuidoc ./lib -q -c ./yuidoc.json"
  },
  "maintainers": [
    {
      "name": "Marco Asbreuk",
      "email": "marco@itsasbreuk.nl"
    }
  ],
  "testling": {
    "harness": "mocha",
    "files": "tests/*.js",
    "browsers": [
      "ie/6..latest",
      "chrome/22..latest",
      "firefox/16..latest",
      "safari/latest",
      "opera/11.0..latest",
      "iphone/6",
      "ipad/6",
      "android-browser/latest"
    ]
  },
  "license": "BSD-3-Clause"
}
